<Window x:Class="KQ.Core.EditorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border x:Name="Border_Menu" Grid.Row="0" BorderBrush="Black" BorderThickness="0,0,0,1" />
        <DockPanel Grid.Row="1">
            <Border x:Name="Border_Browser" Grid.Column="1" Width="200" BorderThickness="0,0,1,0" BorderBrush="Black" />
            <Border x:Name="Border_Output" DockPanel.Dock="Bottom" Height="198" VerticalAlignment="Bottom" BorderThickness="0,1,0,0" BorderBrush="Black" />
            <Border x:Name="Border_Property" Background="#FFE6F7E5" DockPanel.Dock="Right" BorderThickness="1,0,0,0" BorderBrush="Black" HorizontalAlignment="Right" Width="300" />
            <Border x:Name="Border_Map" Background="#FFE5F3F7" />
        </DockPanel>
        <Border x:Name="Border_Status" Grid.Row="2" BorderBrush="Black" BorderThickness="0,1,0,0" />
    </Grid>
</Window>
