<UserControl x:Class="KQ.Output.OutputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KQ.Output"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Border BorderBrush="Black" BorderThickness="0,1,0,0">
        <Border Background="#FFEDF4F9" BorderBrush="#FF3C3C3C" BorderThickness="1" Margin="4">
            <DockPanel Margin="2">
                <Label Content="输出信息" DockPanel.Dock="Top"/>
                <Border Grid.Row="1" BorderBrush="#828790" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DockPanel.Dock="Bottom" Background="White">
                    <ScrollViewer x:Name="ScrollViewer_OutputText" VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="TextBox_Output" />
                    </ScrollViewer>
                </Border>
            </DockPanel>
        </Border>
    </Border>
</UserControl>
